@model PagedList.IPagedList<Service.Models.VehicleModel>
@using PagedList.Mvc;
@using PagedList;

@{
    ViewBag.Title = "Manage your models list:";
}

<div class="panel panel-default todo-panel">
    <div class="panel-heading">@ViewData["Title"]</div>
 
@using (Html.BeginForm("Index", "VehicleModel", FormMethod.Get))
{
    <p>
        Find: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)  
        <input type="submit" value="Search" />
    </p>
}

<table class="table table-hover">
    <thead>
        <tr>
            <td>@Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter=ViewBag.CurrentFilter })</td>
            <td>@Html.ActionLink("Abbreviation", "Index", new { sortOrder = ViewBag.AbbrSortParm, currentFilter=ViewBag.CurrentFilter })</td>
            <td>Manufacturer</td>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Abbreviation)
            </td>
            <td>
                 @Html.DisplayFor(modelItem => item.Manufacturer.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }
</table>
<br />

<div>
    <ul class="pagination">
        @for (int i = 1; i<= Model.PageCount; i++)
        {
            <li class="page-link">
                @Html.ActionLink(i.ToString(), "Index", new { page = i })
            </li>
        }
    </ul>
</div>

@await Html.PartialAsync("AddItemPartial", new VehicleModel()) 

</div>
</div>